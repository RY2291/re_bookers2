<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image-.png" %>
      <table>
        <tbody>
          <tr></tr>
          <tr>
        	  <th>name</th>
        	  <th><%= current_user.name %></th>
          </tr>
          <tr>
        	  <th>introduction</th>
        	  <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to "マイページ編集", edit_user_path(@user.id) %>


<div class="row">
  <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_23981" href="/users/23981/edit"></a>
</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <p><%= f.text_field :title %></p>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <p><%= f.text_area :body %></p>
        </div>
        <div class="form-group">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image-.png" %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>